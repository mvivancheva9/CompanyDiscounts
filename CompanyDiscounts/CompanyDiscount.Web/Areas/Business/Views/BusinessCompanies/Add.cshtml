@model CompanyDiscount.Web.Areas.Business.Models.BusinessCompaniesViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Business/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Add", "BusinessCompanies", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add new company.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
       @Html.LabelFor(model => model.Company.Id, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.Company.Id, new SelectList((System.Collections.IEnumerable)ViewData["companies"], "Id", "Name", 0), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Discount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Discount, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add Company" />
        </div>
    </div>
}